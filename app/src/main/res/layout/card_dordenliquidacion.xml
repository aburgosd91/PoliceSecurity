<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_importetotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_documento"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/imagen_personal"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_documento"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="3"
            android:minLines="1"
            android:text="Nombre"
            android:id="@+id/nombre"
            android:layout_toRightOf="@+id/imagen_personal"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="########"
            android:maxLines="2"
            android:minLines="1"
            android:id="@+id/txtplaca"
            android:layout_below="@+id/nombre"
            android:layout_alignLeft="@+id/nombre" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="########"
            android:id="@+id/txt_dinero"
            android:layout_below="@+id/txtplaca"
            android:layout_alignLeft="@+id/nombre" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="########"
            android:id="@+id/txtfechafin"
            android:layout_below="@+id/txt_dinero"
            android:layout_alignLeft="@+id/nombre" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fondo_seleccion"
        android:layout_width="90dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        android:layout_gravity="right"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seleccion"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:src="@drawable/ic_arrow_white"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/white"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>