    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:fl_originalWidth="700"
        app:fl_originalHeight="450"
        app:fl_strokeColor="@color/verde"
        app:fl_fillColor="@color/verde"
        app:fl_strokeWidth="0.5dp"
        app:fl_strokeDrawingDuration="2000"
        app:fl_fillDuration="6000"
        app:fl_clippingTransform="waves"
        app:fl_fillPercentage="100"
        android:paddingBottom="180dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:text="@string/powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nisirasmall"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/imageView3" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:visibility="invisible"
        android:id="@+id/pgBar" />


</RelativeLayout>
